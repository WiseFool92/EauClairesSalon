@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Client Details</h2>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3><br>
<h3>@Html.DisplayNameFor(model => model.Contact): @Html.DisplayFor(model => model.Contact)<h3><br>
<h3>Stylist: @Model.Stylist.StylistName @Model.Stylist.Specialty</h3>

<p>@Html.ActionLink("Update this Client", "Update", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Delete this Client", "Delete", new { id = Model.ClientId })</p>
<p>@Html.ActionLink("Add a Client", "Create")</p>


