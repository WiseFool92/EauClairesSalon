@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<h3>@Html.DisplayNameFor(model => model.StylistName): @Html.DisplayFor(model => model.StylistName)<h3><br>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)<h3><br>

@if (@Model.Clients.Count == 0)
{
  <p>Nothings here... Rather ominous isn't it</p>
}
@foreach (Client client in @Model.Clients)
{
  <li>@Html.ActionLink($"{client.Name} {client.Contact} ", "Details", "Client", new {id = client.ClientId})</li>
}

<p>@Html.ActionLink("Update this Stylist", "Update", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete this Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Add a Stylist", "Create")</p>
