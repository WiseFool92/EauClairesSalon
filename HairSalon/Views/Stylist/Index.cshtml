@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>Nothings here... Rather ominous isn't it</h3>
}
<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName} {stylist.Specialty}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

